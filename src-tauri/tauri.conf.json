{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "callisto",
  "version": "0.1.0",
  "identifier": "com.riturajpaul.callisto",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "callisto",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Rituraj Paul",
    "homepage": "https://github.com/riturajpaul/callisto",
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 Rituraj Paul",
    "category": "DeveloperTool",
    "shortDescription": "A modern API testing tool built with Tauri and React",
    "longDescription": "Callisto is a powerful, lightweight API testing and development tool with support for REST APIs, environments, and more."
  }
}
